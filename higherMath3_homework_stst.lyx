A=\left(\begin{array}{cc}
0 & \text{−}6*\sqrt{2}\\
-4*\sqrt{3} & 3*\sqrt{3}\\
2 & 16
\end{array}\right)\quad b=\left(\begin{array}{c}
-\sqrt{2}*4\\
\sqrt{3}\\
6
\end{array}\right)
\]

\end_inset


\end_layout

